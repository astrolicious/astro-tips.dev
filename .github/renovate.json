{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":pinAllExceptPeerDependencies"
  ],
  "dependencyDashboard": true,
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "groupName": "all dependencies",
      "groupSlug": "all",
      "matchPackagePatterns": [
        "*"
      ],
      "schedule": [
        "before 4am on Monday"
      ]
    },
    {
      "matchPackagePatterns": [
        "^@astrojs"
      ],
      "schedule": [
        "before 6am"
      ]
    }
  ],
  "prHourlyLimit": 0
}
